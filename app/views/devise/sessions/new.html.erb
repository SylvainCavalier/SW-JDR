<div class="devise-container">
  <div class="devise-hologram-effect"></div>
  
  <div class="devise-panel">
    <div class="devise-logo-container">
      <%= image_tag 'de6.png', class: 'devise-logo', alt: 'SW-JDR' %>
      <div class="devise-title-group">
        <h1 class="devise-title">Connexion</h1>
        <p class="devise-subtitle">Système d'authentification</p>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-form' }) do |f| %>
      <div class="form-inputs">
        <%= f.input :username, 
                    required: true, 
                    autofocus: true, 
                    input_html: { autocomplete: "username", placeholder: "Entrez votre identifiant" },
                    label: "Identifiant" %>
        
        <%= f.input :password, 
                    required: true, 
                    input_html: { autocomplete: "current-password", placeholder: "••••••••" },
                    label: "Mot de passe" %>
        
        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean, label: "Rester connecté" %>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Accéder au système", class: 'devise-btn' %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
