<div class="devise-container">
  <div class="devise-hologram-effect"></div>
  
  <div class="devise-panel">
    <div class="devise-logo-container">
      <%= image_tag 'de6.png', class: 'devise-logo', alt: 'SW-JDR' %>
      <div class="devise-title-group">
        <h1 class="devise-title">Nouveau mot de passe</h1>
        <p class="devise-subtitle">Définir un nouveau mot de passe</p>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'devise-form' }) do |f| %>
      
      <% if resource.errors.any? %>
        <div class="devise-error-notification">
          <h4><i class="fa-solid fa-triangle-exclamation"></i> Erreur</h4>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.input :reset_password_token, as: :hidden %>
      
      <div class="form-inputs">
        <%= f.input :password,
                    label: "Nouveau mot de passe",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} car. min" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "••••••••" } %>
        
        <%= f.input :password_confirmation,
                    label: "Confirmer",
                    required: true,
                    input_html: { autocomplete: "new-password", placeholder: "••••••••" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Changer le mot de passe", class: 'devise-btn' %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
