<div class="devise-container">
  <div class="devise-hologram-effect"></div>
  
  <div class="devise-panel">
    <div class="devise-logo-container">
      <%= image_tag 'de6.png', class: 'devise-logo', alt: 'SW-JDR' %>
      <div class="devise-title-group">
        <h1 class="devise-title">Inscription</h1>
        <p class="devise-subtitle">Création de compte</p>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'devise-form' }) do |f| %>
      
      <% if resource.errors.any? %>
        <div class="devise-error-notification">
          <h4><i class="fa-solid fa-triangle-exclamation"></i> Erreur d'inscription</h4>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "votre@email.com" },
                    label: "Adresse email" %>
        
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", placeholder: "••••••••" },
                    label: "Mot de passe" %>
        
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", placeholder: "••••••••" },
                    label: "Confirmer" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Créer mon compte", class: 'devise-btn' %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
