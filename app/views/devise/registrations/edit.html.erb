<div class="devise-container">
  <div class="devise-hologram-effect"></div>
  
  <div class="devise-panel">
    <div class="devise-logo-container">
      <%= image_tag 'de6.png', class: 'devise-logo', alt: 'SW-JDR' %>
      <div class="devise-title-group">
        <h1 class="devise-title">Mon compte</h1>
        <p class="devise-subtitle">Modifier mes informations</p>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'devise-form' }) do |f| %>
      
      <% if resource.errors.any? %>
        <div class="devise-error-notification">
          <h4><i class="fa-solid fa-triangle-exclamation"></i> Erreur de mise à jour</h4>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-inputs">
        <%= f.input :email, 
                    required: true, 
                    autofocus: true,
                    input_html: { placeholder: "votre@email.com" },
                    label: "Adresse email" %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="devise-pending-confirmation" style="grid-column: 1 / -1;">
            <p><i class="fa-solid fa-clock"></i> En attente : <%= resource.unconfirmed_email %></p>
          </div>
        <% end %>

        <%= f.input :password,
                    hint: "Laisser vide si inchangé",
                    required: false,
                    input_html: { autocomplete: "new-password", placeholder: "Nouveau mot de passe" },
                    label: "Nouveau mot de passe" %>
        
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password", placeholder: "••••••••" },
                    label: "Confirmer" %>

        <%= f.input :current_password,
                    hint: "Requis pour valider",
                    required: true,
                    input_html: { autocomplete: "current-password", placeholder: "••••••••" },
                    label: "Mot de passe actuel" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sauvegarder", class: 'devise-btn' %>
      </div>
    <% end %>

    <div class="devise-danger-zone">
      <h3><i class="fa-solid fa-skull"></i> Zone de danger</h3>
      <p>Cette action est irréversible.</p>
      <%= button_to "Supprimer mon compte", 
                    registration_path(resource_name), 
                    data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr ?" }, 
                    method: :delete,
                    class: 'devise-btn devise-btn-danger' %>
    </div>

    <div class="devise-links">
      <%= link_to root_path, class: 'devise-back-link' do %>
        <i class="fa-solid fa-arrow-left"></i> Retour
      <% end %>
    </div>
  </div>
</div>
