<div class="devise-container">
  <div class="devise-hologram-effect"></div>
  
  <div class="devise-panel">
    <div class="devise-logo-container">
      <%= image_tag 'de6.png', class: 'devise-logo', alt: 'SW-JDR' %>
      <div class="devise-title-group">
        <h1 class="devise-title">Confirmation</h1>
        <p class="devise-subtitle">Renvoyer les instructions</p>
      </div>
    </div>

    <div class="devise-info-message">
      <p><i class="fa-solid fa-envelope-circle-check"></i> Entrez votre email pour recevoir la confirmation.</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'devise-form' }) do |f| %>
      
      <% if resource.errors.any? %>
        <div class="devise-error-notification">
          <h4><i class="fa-solid fa-triangle-exclamation"></i> Erreur</h4>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-inputs" style="grid-template-columns: 1fr;">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "votre@email.com" },
                    label: "Adresse email" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Renvoyer", class: 'devise-btn' %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
