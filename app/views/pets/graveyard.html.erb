<div class="frame-container graveyard-theme" style="position: relative; width: 100%; height: 100vh; overflow-y: auto; overflow-x: hidden;">
  <div class="pet-container graveyard-container mt-3">
    <h2 class="text-center mb-4 graveyard-title">Cimetière des Familiers</h2>

    <%# Liste des Humanoïdes morts %>
    <div class="pet-category-box mb-5">
      <h3 class="text-center graveyard-category-title">Humanoïdes</h3>
      <ul class="list-group">
        <% @dead_humanoids.each do |pet| %>
          <li class="list-group-item graveyard-list-item d-flex justify-content-between align-items-center">
            <div>
              <% if pet.image.attached? %>
                <%= image_tag pet.image.variant(resize_to_fill: [30, 30]), class: "rounded-circle me-2" %> |
              <% end %>
              <strong>Nom :</strong> <i class="fa-solid fa-cross me-1"></i><%= pet.name %> |
              <strong>Race :</strong> <%= pet.race %> |
              <strong>PV :</strong> <%= "#{pet.hp_current} / #{pet.hp_max}" %>
            </div>
            <div>
              <%= link_to "Voir", pet_path(pet), class: "btn btn-outline-primary btn-sm graveyard-view-btn" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <%# Liste des Animaux morts %>
