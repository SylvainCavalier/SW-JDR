<div class="frame-container" style="position: relative; width: 100%; height: 100vh; overflow-y: auto; overflow-x: hidden;">
  <!-- Username -->
  <p class="username-display mt-1 text-primary fw-bold">
    <%= current_user.username.capitalize %>
  </p>

  <div class="container mt-5">
    <h2 class="text-danger text-center mb-4">Cimetière des Familiers</h2>

    <%# Liste des Humanoïdes morts %>
    <div class="pet-category-box mb-5">
      <h3 class="text-center text-info">Humanoïdes</h3>
      <ul class="list-group">
        <% @dead_humanoids.each do |pet| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong>Nom :</strong> <%= pet.name %> | 
              <strong>Race :</strong> <%= pet.race %> | 
            </div>
            <div>
              <%= link_to "Voir", pet_path(pet), class: "btn btn-outline-primary btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <%# Liste des Animaux morts %>
    <div class="pet-category-box mb-5">
      <h3 class="text-center text-success">Animaux</h3>
      <ul class="list-group">
        <% @dead_animals.each do |pet| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong>Nom :</strong> <%= pet.name %> | 
              <strong>Race :</strong> <%= pet.race %> | 
              <strong>PV :</strong> <%= "#{pet.hp_current} / #{pet.hp_max}" %>
            </div>
            <div>
              <%= link_to "Voir", pet_path(pet), class: "btn btn-outline-primary btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <%# Liste des Droïdes morts %>
    <div class="pet-category-box mb-5">
      <h3 class="text-center text-warning">Droïdes</h3>
      <ul class="list-group">
        <% @dead_droids.each do |pet| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong>Nom :</strong> <%= pet.name %> | 
              <strong>Race :</strong> <%= pet.race %> | 
              <strong>PV :</strong> <%= "#{pet.hp_current} / #{pet.hp_max}" %>
            </div>
            <div>
              <%= link_to "Voir", pet_path(pet), class: "btn btn-outline-primary btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <%# Liste des Bio-Armures mortes %>
    <div class="pet-category-box mb-5">
      <h3 class="text-center text-danger">Bio-Armures</h3>
      <ul class="list-group">
        <% @dead_bio_armors.each do |pet| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong>Nom :</strong> <%= pet.name %> | 
              <strong>Race :</strong> <%= pet.race %> | 
              <strong>PV :</strong> <%= "#{pet.hp_current} / #{pet.hp_max}" %>
            </div>
            <div>
              <%= link_to "Voir", pet_path(pet), class: "btn btn-outline-primary btn-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <%# Retour à l'index principal %>
    <div class="text-center mt-4">
      <%= link_to "Retour à la Liste des Familiers", pets_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>