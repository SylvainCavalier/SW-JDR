                data-dice-count="<%= base_damage %>"
                data-action="click->dice#prepareRoll"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Section description / √©pitaphe -->
      <div class="description-box mt-4">
        <strong><%= is_dead ? '√âpitaphe' : 'Description' %> :</strong>
        <p><%= @pet.description %></p>
      </div>

      <!-- Section utilisateur associ√© -->
      <% if current_user.pet_id == @pet.id %>
        <div class="row associated-box mt-4">
          <!-- Colonne gauche : caract√©ristiques avec modificateurs -->
          <div class="col-12 col-sm-6">
            <ul class="list-group">
