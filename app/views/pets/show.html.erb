<div class="frame-container" style="position: relative; width: 100%; height: 100vh; overflow-y: auto; overflow-x: hidden;">
  <%= back_link(pets_path) %>
  <% is_dead = (@pet.current_status&.name == "Mort") || (@pet.hp_current.to_i <= -10) %>
  <div class="pet-container <%= 'pet-dead' if is_dead %>">
    <!-- Box principale -->
    <div class="pet-box">
      <!-- Section sup√©rieure : Nom et Stats -->
      <div class="row">
        <div class="col-12 col-sm-6">
          <ul class="list-group">
            <li class="list-group-item">
              <strong>Nom :</strong> <%= is_dead ? content_tag(:i, '', class: 'fa-solid fa-cross me-1') : ''.html_safe %><%= @pet.name %>
            </li>
            <li class="list-group-item">
              <strong>Race :</strong> <%= @pet.race %>
            </li>
            <li class="list-group-item">
              <strong>√Çge :</strong> <%= @pet.age %> ans
            </li>
            <li class="list-group-item">
              <strong>Taille :</strong> <%= @pet.size %> cm
            </li>
            <li class="list-group-item">
              <strong>Poids :</strong> <%= @pet.weight %> kg
            </li>
            <% if @pet.force == true %>
