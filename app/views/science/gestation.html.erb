<div class="container mt-4" data-controller="gestation">
  <h1 class="text-center text-success mb-4">ü•ö Cuves de Gestation</h1>

  <%= link_to "Retour", genetique_dashboard_path, class: "btn btn-outline-secondary mt-4 go-back-two" %>

  <!-- Les 3 cuves de gestation -->
  <div class="row justify-content-center mb-4">
    <% @tubes.each do |tube| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card bg-dark text-light h-100 <%= tube[:embryo] ? 'border-primary' : 'border-secondary' %> gestation-tube">
          <div class="card-header text-center <%= tube[:embryo] ? 'bg-primary' : 'bg-secondary' %>">
            <h5 class="mb-0">
              <i class="fa-solid fa-flask me-2"></i>Cuve <%= tube[:number] %>
            </h5>
          </div>
          
          <div class="card-body text-center">
            <% if tube[:embryo] %>
              <% embryo = tube[:embryo] %>
              
              <!-- Animation de la cuve active -->
              <div class="tube-animation mb-3">
                <div class="tube-container">
                  <div class="tube-liquid"></div>
                  <div class="tube-embryo">üß¨</div>
                </div>
              </div>
              
              <h5 class="text-info"><%= embryo.name %></h5>
              <p class="mb-1">
                <span class="badge bg-success"><%= embryo.creature_type.humanize %></span>
                <span class="badge bg-info"><%= embryo.race || "Race inconnue" %></span>
              </p>
              
              <!-- Barre de progression -->
              <% progress = embryo.gestation_days_total > 0 ? ((embryo.gestation_days_total - embryo.gestation_days_remaining).to_f / embryo.gestation_days_total * 100).round : 0 %>
              <div class="progress mb-2" style="height: 25px;">
                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" 
                     role="progressbar" 
                     style="width: <%= progress %>%;"
                     aria-valuenow="<%= progress %>" aria-valuemin="0" aria-valuemax="100">
                  <%= progress %>%
                </div>
              </div>
              
              <p class="mb-3">
                <i class="fa-solid fa-clock me-1"></i>
                <strong><%= embryo.gestation_days_remaining %></strong> jours restants
                <br>
                <small class="text-light">(sur <%= embryo.gestation_days_total %> jours)</small>
              </p>
              
              <!-- Actions -->
              <div class="d-flex flex-column gap-2">
                <button class="btn btn-outline-success btn-sm"
                        data-action="click->gestation#viewEmbryo"
                        data-embryo-id="<%= embryo.id %>">
                  <i class="fa-solid fa-eye me-1"></i>Voir les stats
                </button>
                
                <% # Trouver une cuve libre pour le clonage %>
                <% free_tube = @tubes.find { |t| t[:embryo].nil? } %>
                <% if free_tube %>
                  <button class="btn btn-outline-success btn-sm"
                          data-action="click->gestation#cloneEmbryo"
                          data-embryo-id="<%= embryo.id %>"
                          data-target-tube="<%= free_tube[:number] %>">
                    <i class="fa-solid fa-clone me-1"></i>Cloner (100cr + 3 mat.)
                  </button>
                <% else %>
                  <button class="btn btn-outline-success btn-sm" disabled>
                    <i class="fa-solid fa-clone me-1"></i>Cloner (pas de cuve libre)
                  </button>
                <% end %>
                
                <button class="btn btn-outline-success btn-sm"
                        data-action="click->gestation#accelerateGestation"
                        data-embryo-id="<%= embryo.id %>"
                        data-embryo-name="<%= embryo.name %>">
                  <i class="fa-solid fa-forward-fast me-1"></i>Acc√©l√©rer (500cr + 1 mat.)
                </button>
              </div>
            <% else %>
              <!-- Cuve vide -->
              <div class="tube-empty py-5">
                <i class="fa-solid fa-flask fa-4x text-light mb-3"></i>
                <p class="text-light">Cuve disponible</p>
                <small class="text-light">
                  Appliquez des traits √† un embryon puis placez-le en gestation.
                </small>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Embryons pr√™ts √† na√Ætre -->
  <% if @embryos_ready.any? %>
    <div class="row">
      <div class="col-12">
        <div class="card bg-dark text-light border-success">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fa-solid fa-baby me-2"></i>Cr√©atures pr√™tes √† na√Ætre (<%= @embryos_ready.count %>)</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <% @embryos_ready.each do |embryo| %>
                <div class="col-md-4 mb-3">
                  <div class="card bg-secondary">
                    <div class="card-body text-center">
                      <h5 class="text-success"><%= embryo.name %></h5>
                      <p class="mb-2">
                        <span class="badge bg-success"><%= embryo.creature_type.humanize %></span>
                      </p>
                      <p class="small mb-3">
                        PV: <%= embryo.hp_max %> | D√©g√¢ts: <%= embryo.damage_1 %>D+<%= embryo.damage_bonus_1 %>
                      </p>
                      <button class="btn btn-success"
                              data-action="click->gestation#birthCreature"
                              data-embryo-id="<%= embryo.id %>"
                              data-embryo-name="<%= embryo.name %>">
                        <i class="fa-solid fa-baby me-1"></i>Faire na√Ætre !
                      </button>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Modal de visualisation -->
  <div class="modal fade" id="embryoViewModal" tabindex="-1" data-gestation-target="viewModal">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content bg-dark text-light border-info">
        <div class="modal-header bg-info text-dark">
          <h5 class="modal-title" data-gestation-target="viewTitle">D√©tails de l'embryon</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" data-gestation-target="viewContent">
          <!-- Contenu charg√© dynamiquement -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Lien retour -->
  <div class="text-center mt-4">
    <%= link_to genetique_dashboard_path, class: "btn btn-outline-secondary" do %>
      <i class="fa-solid fa-arrow-left me-2"></i>Retour au Dashboard G√©n√©tique
    <% end %>
  </div>
</div>

<style>
  .gestation-tube {
    transition: all 0.3s ease;
  }
  .gestation-tube:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }
  
  .tube-container {
    position: relative;
    width: 100px;
    height: 150px;
    margin: 0 auto;
    border: 3px solid #444;
    border-radius: 0 0 50px 50px;
    overflow: hidden;
    background: rgba(0, 50, 100, 0.3);
  }
  
  .tube-liquid {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80%;
    background: linear-gradient(to top, rgba(0, 200, 150, 0.6), rgba(0, 150, 200, 0.3));
    animation: bubbles 3s ease-in-out infinite;
  }
  
  .tube-embryo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2.5rem;
    animation: float 2s ease-in-out infinite;
  }
  
  @keyframes bubbles {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 0.9; }
  }
  
  @keyframes float {
    0%, 100% { transform: translate(-50%, -50%); }
    50% { transform: translate(-50%, -60%); }
  }
  
  .tube-empty {
    opacity: 0.5;
  }

  /* Animation de naissance */
  .birth-animation {
    animation: birthGlow 1.5s ease-in-out;
    border-color: #28a745 !important;
    box-shadow: 0 0 30px rgba(40, 167, 69, 0.6);
  }

  @keyframes birthGlow {
    0% { box-shadow: 0 0 5px rgba(40, 167, 69, 0.3); }
    50% { box-shadow: 0 0 40px rgba(40, 167, 69, 0.8), 0 0 80px rgba(40, 167, 69, 0.4); }
    100% { box-shadow: 0 0 30px rgba(40, 167, 69, 0.6); }
  }

  .birth-success-content {
    padding: 1rem 0;
    animation: birthFadeIn 0.8s ease-out;
  }

  .birth-emoji {
    font-size: 4rem;
    animation: birthBounce 1s ease-out;
  }

  @keyframes birthFadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes birthBounce {
    0% { transform: scale(0); }
    50% { transform: scale(1.3); }
    70% { transform: scale(0.9); }
    100% { transform: scale(1); }
  }
</style>
