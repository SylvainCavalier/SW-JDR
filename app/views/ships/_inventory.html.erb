<div class="ship-inventory-section">
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Quantité</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% objects.each do |object| %>
        <tr id="ship_object_<%= object.id %>">
          <td><%= object.name %></td>
          <td><%= object.quantity %></td>
          <td><%= object.description %></td>
          <td>
            <%= link_to 'Éditer', edit_ship_ship_object_path(ship, object), class: 'btn btn-outline-warning btn-sm' %>
            <%= link_to 'Supprimer', ship_ship_object_path(ship, object), method: :delete, data: { confirm: 'Supprimer cet objet ?' }, class: 'btn btn-outline-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Ajouter un objet', new_ship_ship_object_path(ship), class: 'btn btn-outline-success btn-sm' %>
</div> 