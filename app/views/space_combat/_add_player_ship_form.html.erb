<%# Formulaire pour ajouter un vaisseau joueur existant au combat %>
<div class="enemy-form-box p-3" style="border-color: rgba(23, 162, 184, 0.3); box-shadow: 0 0 20px rgba(23, 162, 184, 0.2);">
  <h5 style="color: #17a2b8;">Ajouter un vaisseau joueur</h5>

  <%= form_with url: "/space_combat/add_ship", method: :post, local: true do |f| %>
    <div class="d-flex gap-2 align-items-end">
      <div class="flex-grow-1">
        <%= f.label :ship_id, "Vaisseau", class: "form-label text-white" %>
        <%= f.select :ship_id,
                     ships.map { |s| ["#{s.name} (#{s.group.name})", s.id] },
                     { prompt: "SÃ©lectionner un vaisseau..." },
                     class: "form-select form-select-sm" %>
      </div>
      <div>
        <%= f.submit "Ajouter", class: "btn btn-info btn-sm" %>
      </div>
    </div>
  <% end %>
</div>
